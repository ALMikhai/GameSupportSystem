@using Microsoft.AspNetCore.Identity
@using Server.Models.Operator
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark">Hello @UserManager.FindByEmailAsync(User.Identity?.Name).Result.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Operator" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Operator" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Operator" asp-action="Login">Login</a>
    </li>
}
</ul>